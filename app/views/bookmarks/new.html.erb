<div class= "container">

  <h1>Create a bookmark</h1>

  <%= simple_form_for [ @list, @bookmark ] do |f| %>
    <%= f.input :comment %>
    <%= f.association :movie %>
    <div class="d-flex justify-content-between">
      <%= f.submit "Submit bookmark", class: "btn btn-primary" %>
      <%= link_to "Go back to list", list_path(@list), class: "btn btn-warning "%>
    </div>
  <% end %>


</div>
