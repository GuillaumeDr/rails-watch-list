

<% if @list.photo.attached? %>
  <div class="banner mb-4" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @list.photo.key, height: 300, width: 400, crop: :fill %>')">
    <div class="container text-center">
<% else %>
  <div class="banner mb-4" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1485846234645-a62644f84728?crop=entropy&cs=tinysrgb&fm=jpg&ixlib=rb-1.2.1&q=80&raw_url=true&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=859)">
    <div class="container text-center">
<% end %>
      <h1><%= @list.name %></h1>
    </div>
  </div>

<div class= "container">


  <div class="d-flex justify-content-between">
    <h2>My bookmarks</h2>
    <div >
      <%= link_to "New bookmark", new_list_bookmark_path(@list),class: "btn btn-outline-secondary" %>
      <%= link_to "Delete list", list_path(@list), class: "btn btn-warning", method: :delete  %>
    </div>
  </div>
  <div class="cards">
    <ul>
      <% @list.bookmarks.each do |bookmark| %>
        <li>
          <div class="card-product mt-4">
            <img src='<%= bookmark.movie.poster_url %>' />
            <div class="card-product-infos">
              <h2><%= bookmark.movie.title %></h2>
              <p><%= bookmark.comment %></p>
              <p><%= link_to "Delete", bookmark_path(bookmark),class: "btn btn-outline-danger btn-sm", method: :delete  %></p>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
